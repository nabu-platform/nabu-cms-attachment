    <headerParameters>Content-Type, Nabu-Transfer-Encoding, Content-Disposition</headerParameters>
    <role>$user</role>
    <permissionContext>=input/path/nodeId</permissionContext>
    <permissionAction>attachment.create</permissionAction>
    <inputAsStream>true</inputAsStream>
    <output>nabu.cms.attachment.types.rest.attachmentOutput</output>
    <configurationType>nabu.cms.attachment.configuration</configurationType>
    <lenient>false</lenient>
    <webApplicationId>false</webApplicationId>
    <language>false</language>
    <allowFormBinding>false</allowFormBinding>
